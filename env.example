# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/emergency_help

# SSL Configuration
# Set to 'true' if your database requires SSL
DB_SSL=false

# Set to 'false' to allow self-signed certificates (for development only)
# WARNING: Only use this in development, not in production!
DB_SSL_REJECT_UNAUTHORIZED=true

# SSL Certificate (base64 encoded)
# To encode your .crt file: cat your-cert.crt | base64 | tr -d '\n'
# Or: openssl base64 -in your-cert.crt -out cert-base64.txt
DB_SSL_CERT=